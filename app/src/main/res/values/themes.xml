<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.EncryptedNotes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:windowBackground">@color/brightSurface</item>
        <item name="cardBackgroundColor">@color/brightCardBackground</item>
        <item name="liftOnScrollColor">@color/brightSurface</item>
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:textSize">15sp</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.EncryptedNotes" parent="Base.Theme.EncryptedNotes" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/brightSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/encnotes_update_transparent</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.EncryptedNotes</item>
    </style>
</resources>